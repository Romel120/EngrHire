<ul id="pending-bids-list">
        {{#each pendingBids}}
          <li>
            <div class="bid-card">
              <h3 class="bid-title">{{this.jobTitle}}</h3>
              <p class="bid-details">{{this.jobDeadline}}</p>
              <p class="bid-details">{{this.engineerFullName}}</p>
              <p class="bid-details">{{this.bidAmount}}</p>
              <p class="bid-details">{{this.bidDetails}}</p>

              <div class="bid-actions">
                <button
                  class="accept-bid"
                  data-bidid="{{this._id}}"
                  data-jobid="{{this.job}}"
                  onclick="acceptBid('{{this._id}}', '{{this.job}}')"
                >
                  Accept
                </button>
                <button
                  class="reject-bid"
                  data-bidid="{{this._id}}"
                  onclick="rejectBid('{{this._id}}')"
                >
                  Reject
                </button>
              </div>
            </div>
          </li>
        {{/each}}
      </ul>

      <!-- Container for Accepted Bids -->
      <h2>Accepted Bids:</h2>
      <ul id="accepted-bids-list">
        {{#each acceptedBids}}
          <li>
            <div class="bid-card">
              <h3 class="bid-title">{{this.jobTitle}}</h3>
              <p class="bid-details">{{this.jobDeadline}}</p>
              <p class="bid-details">{{this.engineerFullName}}</p>
              <p class="bid-details">{{this.bidAmount}}</p>
              <p class="bid-details">{{this.bidDetails}}</p>
              <!-- You can customize the display for accepted bids here -->
            </div>
          </li>
        {{/each}}
      </ul>



       <li>
       
    <div class="container mt-5 mb-5">
      <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded bid-card">
                
                <div class="col-md-6 mt-1">
                    <h4>${bid.jobTitle}</h5>
                    <h5>${bid.jobDeadline}</h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>${bid.engineerFullName}</span>
                    </div>
                    
                    <p class="text-justify text-truncate para mb-0">${bid.bidDetails}<br><br></p>
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="mr-1">${bid.bidAmount}</h4>
                    </div>
                  
                    <div class="d-flex flex-column mt-4 bid-actions">
                      <button class="btn btn-primary btn-sm accept-bid" class="" data-bidid="${bid._id}" data-jobid="${bid.job}"
                      onclick="acceptBid('${bid._id}', '${bid.job}')">Accept</button>
                      <button class="btn btn-outline-primary btn-sm mt-2 reject-bid" data-bidid="${bid._id}" onclick="rejectBid('${bid._id}}')">Reject</button>
                      </div>
                </div>
        </div>
      </div>
      </div>
      </li>